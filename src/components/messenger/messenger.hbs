{{#if selectedChat }}
<div>
    <h2 class="chat__disclaimer"> {{{this.selectedChat}}}</h2>
        <ul class="chat__container-users-list">
          {{#each messages}}
            {{{ Message content=this.content }}}
          {{/each}}
        </ul>
        {{{ Form inputs=this.inputs buttons=this.buttons }}}
    </div>
{{else}}
    <div>
    <h2 class="chat__disclaimer"> {{{Message}}} Chatty: Выберите чат чтобы отправить сообщение</h2>
    </div>
{{/if}}

