{{#if selectedChat }}
    <div>
        <ul class="chat__container-users-list">
          {{#each messages}}
            {{{ Message content=this.content user_id=this.user_id isMine=this.isMine }}}
          {{/each}}
        </ul>
        {{{ Form inputs=this.inputs buttons=this.buttons }}}
    </div>
{{else}}
    <h2 class="chat__disclaimer">Chatty: Выберите чат чтобы отправить сообщение</h2>
{{/if}}

