<section class="chat">
    <div class="chat__container-users">
        <div class="chat__container-header">
            <h2 class="chat__header">Chatty</h2>
            <div class="chat__container-header-icons">
                <img class="chat__header-icon" src="/images/start-chat-icon.svg" alt="Иконка. Создать чат">
                <img class="chat__header-icon" src="/images/settings-icon.svg" alt="Иконка. Настройки">
            </div>
        </div>
        <ul class="chat__container-stories-list">
            {{> Story story-owner="You story" }}
            {{> Story story-owner="story 1" }}
            {{> Story story-owner="story 2" }}
            {{> Story story-owner="story 3" }}
        </ul>
        <div class="chat__search-bar"></div>
        <ul class="chat__container-users-list">
            {{> User chat-user="user 1" }}
            {{> User chat-user="user 2" }}
            {{> User chat-user="user 3" }}
            {{> User chat-user="user 4" }}
        </ul>
    </div>
    <div class="chat__container-chats">
        <h2 class="chat__disclaimer">Chatty: Выберите чат чтобы отправить сообщение</h2>
    </div>

</section>
